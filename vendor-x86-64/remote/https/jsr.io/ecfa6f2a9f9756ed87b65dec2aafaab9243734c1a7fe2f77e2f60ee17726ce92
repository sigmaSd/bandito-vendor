import { isWindows } from "./_os.ts";

export const DELIMITER = isWindows ? ";" as const : ":" as const;
export const SEPARATOR = isWindows ? "\\" as const : "/" as const;
export const SEPARATOR_PATTERN = isWindows ? /[\\/]+/ : /\/+/;

